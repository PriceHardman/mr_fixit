<h2>Booking #<%= @booking[:booking_id] %></h2>


<h3>Booked Items:</h3>
<table border="1">
  <tr>
    <% @booked_items[0].each_key do |key| %>
        <th><%= key %></th>
    <% end %>
  </tr>
  <% @booked_items.each do |row| %>
    <tr>
      <% row.each_value do |value| %>
          <td><%= value %></td>
      <% end %>
    </tr>
  <% end %>
</table>

<h3>Booking Information:</h3>
<table border="1">
  <% @booking.values.each do |key,value| %>
      <% if value %>
        <tr>
        <td>
            <%= key %>
        </td>
        <td>
            <%= value %>
        </td>
        </tr>
     <% else %>
     <% end %>
  <% end %>
</table>